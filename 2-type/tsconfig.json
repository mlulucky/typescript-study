{
	"compilerOptions": {
		"target":"ESNext", // 자바스크립트 버전
		"module": "ESNext", // 자바스크립트 모듈 시스템 // -> package.json 에 type: module 속성도 추가해야함.
		"outDir": "dist", // 자바스크립트 생성 위치
		"strict": true, // 타입검사
		// "strictNullChecks": false, // null 타입이 아닌경우에도 null 값을 할당할 수 있다.
		"moduleDetection": "force" // 타입스크립트 파일 개별 모듈설정
	},
	"ts-node": {
		"esm": true 
	},
	"include": ["src"] // 컴파일할 파일 폴더 지정
}

// 타입스크립트 설정을 수정 후에는 ctrl+shift+p 로 타입스크립트 설정 재실행시키기
{ 
	"compilerOptions": {
		"target": "ESNext", // 컴파일되는 자바스크립트 버전 (함수버전 - ES5, ESNext...)
		"module": "ESNext", // 자바스크립트 모듈시스템 설정 (불러오기 / 내보내기 - CommonJS, ESNext...)
		"outDir": "dist", // 컴파일로 생성된 자바스크립트 파일 생성위치
		"strict": true, // 타입검사 엄격하게 설정
		"moduleDetection": "force" // 타입스크립트가 모듈을 어떻게 바라볼지 설정(전역모듈 -> 독립모듈)
	}, 
	"ts-node": {
		"esm": true // ts-node(CommonJS 해석) 가 ES모듈을 해석할 수 있도록 설정
	},
"include": ["src"] // 컴파일 경로, 범위 설정
}
